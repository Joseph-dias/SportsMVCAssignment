@model Sports_JDias.Models.PlayerGameStatViewModel

@{
    ViewBag.Title = "Edit Stat";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Player Game Stat Edit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h5>@(Model.gameName)</h5>
        <hr />
        <h5>@(Model.playerName)</h5>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.shotsOnGoal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.shotsOnGoal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.shotsOnGoal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ViewStats")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
