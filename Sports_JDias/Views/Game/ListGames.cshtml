@model IEnumerable<Sports_JDias.Models.GameViewModel>

@{
    ViewBag.Title = "Games";
}

<h2>Games</h2>

<p>
    @Html.ActionLink("Create New", "CreateGame")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gameDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gameDate)
        </td>
        <td>
            @Html.ActionLink("Update", "EditGame", new { id=item.gameID }) |
            @Html.ActionLink("Delete", "DeleteGame", new { id=item.gameID })
        </td>
    </tr>
}

</table>
